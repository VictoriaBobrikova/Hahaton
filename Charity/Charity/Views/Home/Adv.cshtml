@model Charity.Models.ViewModels.AdvViewModel

@{
    ViewBag.Title = "Adv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <div class="adv">
            <img src="~/Content/Images/blagotvor.jpg" style="width:250px; margin-left:10px;" />
            <br>
            <div class="user-prof"><a href="">Ссылка на пользователя</a></div>
            <br>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-5">
                <br>
                <div class="adv-name">@Model.Name</div>
            </div>
            <br>
            <div class="col-md-4">
                <div class="adv-date">@Model.Date</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                    <div class="adv-info col-md-9">

                        @Model.Description;

                </div>
            </div>
        </div>
        <div class="row contact">
            <div class="col-xs-12">
                <a class="btn btn-primary" style="width:150px;" href="/Home/TakeById?id=@Model.Id">Откликнуться</a>
            </div>
        </div>


    </div>
</div>

<div class="row">
    <div class="col-xs-12 text-center">
        <h4>Сюда входят:</h4>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-8 adv1">
        @foreach (var item in Model.Items)
        {
            <div class="col-md-12 adv2">
                <div class="row">
                    <div class="col-md-3">
                        <div class="adv">
                            <img src="~/Content/Images/blagotvor.jpg" class="img-circle" style="width:150px;">
                            <br><br>
                            <br>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-5">
                                <br>
                                <div class="adv-name">@item.Name</div>
                            </div>
                            <br>
                        </div>

                        <div class="adv-info">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>



